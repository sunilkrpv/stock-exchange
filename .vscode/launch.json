    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/main.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true,
            "console": "integratedTerminal",
            "runtimeArgs": ["-r", "ts-node/register"],
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}